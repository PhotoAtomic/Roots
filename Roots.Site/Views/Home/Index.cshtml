@{
    ViewBag.Title = "Home Page";
}
@section scripts{
    @Scripts.Render("~/bundles/angularjs", "~/signalr/hubs", "~/Generated/Index", "~/scripts/controllers/home.js")
    @Scripts.Render("/Scripts/marvin4js/gui/gui.nocache.js")
}

<div class="jumbotron">
    <img src="~/Images/aptuitlogo.png"/>
    <p class="lead">
        Aptuit's real time client data portal
    </p>    
</div>



<div ng-app ng-controller="HomeController">
    <table class="col-lg-12 table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th class="col-lg-2">
                </th>
                <th class="col-lg-10">
                    Name
                </th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="item in items">
                <td class="col-lg-2">
                    <img class="img-thumbnail" ng-src="{{item.image}}" ng-show="item.image != null" />
                </td>
                <td class="col-lg-10">
                    <h5>{{item.Name}}</h5>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="blueButton col-lg-offset-11 col-lg-1">Add new file</button>
</div>