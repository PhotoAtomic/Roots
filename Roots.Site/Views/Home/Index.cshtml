@{
    ViewBag.Title = "Home Page";
}
@section scripts{
    @Scripts.Render("~/bundles/angularjs", "~/signalr/hubs", "~/Generated/Index", "~/scripts/controllers/home.js")
    @Scripts.Render("/Scripts/marvin4js/gui/gui.nocache.js")
}

<div class="jumbotron">
    <img src="~/Images/aptuitlogo.png" />
    <p class="lead">
        Aptuit's real time client data portal
    </p>
</div>



<div class="container" ng-app ng-controller="HomeController">
    <div class="row">
        <div class="col-md-2">
            <div class="affix">
                Browser
            </div>
        </div>
        <div class="col-md-10">
            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th class="col-lg-2">
                        </th>
                        <th class="col-lg-10">
                            Name
                        </th>
                    </tr>
                </thead>

                <tbody>
                    <tr ng-repeat="item in items">
                        <td class="col-lg-2">
                            <img class="img-thumbnail" ng-src="{{item.image}}" ng-show="item.image != null" />
                        </td>
                        <td class="col-lg-10">
                            <h5>{{item.Name}}</h5>
                        </td>
                    </tr>
                </tbody>
            </table>
            <button class="btn btn-primary col-lg-offset-10 col-lg-2"><span class="glyphicon glyphicon-cloud-upload"></span> Add new file</button>
        </div>
    </div>
</div>